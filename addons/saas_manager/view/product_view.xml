<!-- saas_manager.product -->
<!-- product.product -->
<!-- product.product -->
<openerp>
    <data>

        <!-- INHERITED SEARCH -->
        <record id="view_saas_manager_product_filter" model="ir.ui.view">
            <field name="name">saas_manager.product.select</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_search_form_view"/>
            <field name="arch" type="xml">
                <search position="inside">
                        <field name="saas_product" string="SaaS Product"
                            />
                </search>
            </field>
        </record>
 
        <!-- INHERITED FORM -->
        <record id="view_saas_manager_product_form" model="ir.ui.view">
            <field name="name">saas_manager.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <group position="inside">
                </group>
            </field>
        </record>

        <!-- INHERITED TREE -->
        <record id="view_saas_manager_product_tree" model="ir.ui.view">
            <field name="name">saas_manager.product.tree</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <tree position="inside">
                </tree>
            </field>
        </record>


    </data>
</openerp>
